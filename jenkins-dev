pipeline {
    agent any
    stages {
        stage('Build') {
        	parallel {
                  stage('wordpress cms') {
                    steps {
		       echo 'build test and deploy wordpress cms started'
                       sh '''#!/bin/bash
                         sudo docker-compose down
		    	 sudo docker-compose up -d --build
			 sudo cp ./wp-config.php ./src/wp-config.php
                       '''
                   }
            	}
            }
        }
	
        stage('Test') {
            steps{
                 echo 'wordpress endpoint test ';
           }
        }
    }
}
